@model List<Exercises.Models.Data.State>
@{
    ViewBag.Title = "ListStates";
}

<!DOCTYPE html>

<div class="row">
    <div class="col-xs-12">
        <h3>States</h3>
        @Html.ActionLink("Add State", "AddState", "Admin", null, new { @class="btn btn-primary"})
    </div>
</div>
        <div class="row">
            <table class="table table-striped" style="width:auto">
                <thead>
                    <tr>
                        <th>State Abbreviation</th>
                        <th>State Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var state in Model)
                    {
                        <tr>
                            <td>@state.StateAbbreviation</td>
                            <td>@state.StateName</td>
                            <td>@Html.ActionLink("edit", "EditState", "Admin", new { stateAbreviation = state.StateAbbreviation }, null)
                                @Html.ActionLink("delete", "DeleteState", "Admin",new { stateAbreviation = state.StateAbbreviation}, null)
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
            </div>
</body>
</html>