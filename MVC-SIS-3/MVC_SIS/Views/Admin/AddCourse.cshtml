@model Exercises.Models.Data.Course
@{
    ViewBag.Title = "AddCourse";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Add Course</h3>
        <span class="text-danger">@Html.ValidationSummary()</span>
        @Html.ActionLink("Return to Courses", "Courses", "Admin")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label>Course Name</label>
                @Html.TextBoxFor(m=> m.CourseName, new { @class = "form-control", placeholder="Course Name"})
            </div>
            <button type="submit" class="btn btn-sm btn-primary">Save</button>
        }
    </div>
</div>
