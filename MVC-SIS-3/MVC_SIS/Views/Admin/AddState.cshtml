@model Exercises.Models.Data.State
@{
    ViewBag.Title = "AddState";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Add State</h3>
        <span class="text-danger">@Html.ValidationSummary()</span> 
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label>State Name Abreviation</label>
                @Html.TextBoxFor(m=>m.StateAbbreviation, new { @class = "form-control", placeholder = "Abbreviated Name" })
                <label>State Full Name</label>
                @Html.TextBoxFor(m => m.StateName, new { @class = "form-control", placeholder = "Full Name" })
            </div>
            <button type="submit" class="btn btn-sm btn-primary">Save</button>
        }

    </div>

</div>

